# Application Settings
APP_NAME=Historia Clínica Electrónica
APP_VERSION=1.0.0
DEBUG=True

# Clinic Information
CLINIC_NAME=Clínica Médica Galenos
CLINIC_ADDRESS=Av. Principal 123, Ciudad
CLINIC_PHONE=+591 123 456 789
CLINIC_LOGO_PATH=  # Optional: Path to clinic logo (e.g., ./assets/logo.png)

# Storage
DOCUMENTS_STORAGE_PATH=./storage/documents

# Database Configuration
# For PostgreSQL (production/docker)
DATABASE_URL=postgresql://galenos_user:galenos_password@localhost:5432/galenos_db

# For SQLite (development)
# DATABASE_URL=sqlite:///./galenos.db

# Security
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-OR-APP-WILL-NOT-START-minimum-32-characters-required
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# WeasyPrint
WEASYPRINT_SELFTEST=True

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
